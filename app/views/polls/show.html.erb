<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <h2>
      <strong>Results for poll:</strong>
      <%= @poll.name %>
      </h2>

      <p>
      <strong>Date:</strong>
      <%= @poll.event_date %>
      </p>

      <p>
      <strong>Suggested address:</strong>
      <%= @poll.address %>
      </p>

      <p>
      <strong>Poll creator:</strong>
      <%= @poll.owner.email %>
      </p>


      <h1><%= @option.name %></h1>

      <% unless @photos.empty? %>
        <div class="carousel carousel-slider">
          <% @photos.each do |p| %>
            <a class="carousel-item"><img src="<%= p %>"></a>
          <% end %>
        </div>
      <% end  %>

      <div class="actions">
        <div><b>Address:</b><a href="https://maps.google.com/maps?q=<%= @option_info.formatted_address %>"><%= @option_info.formatted_address %></a></div>
        <div><b>Rating:</b> <%= @option_info.rating %></div>
      </div>
    </div>
  </div>
</div>

<script charset="utf-8">
$('.carousel.carousel-slider').carousel({
    fullWidth: true
  });
</script>
