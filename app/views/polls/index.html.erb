<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <p id="notice"><%= notice %></p>

      <h1>Pending polls</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Event date</th>
            <th>Address</th>
            <th>Owner</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pending_polls.each do |poll| %>
            <tr>
              <td><%= poll.name %></td>
              <td><%= poll.event_date %></td>
              <td><%= poll.address %></td>
              <td><%= poll.owner.email %></td>
              <% if poll.getNextOption %>
                <td><%= button_to 'Start Poll', {:controller => "polls", :action => "start",:id => poll.id} , :method=>:post, class: "btn option-button"  %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h1>Done polls</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Event date</th>
            <th>Address</th>
            <th>Owner</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @done_polls.each do |poll| %>
            <tr>
              <td><%= poll.name %></td>
              <td><%= poll.event_date %></td>
              <td><%= poll.address %></td>
              <td><%= poll.owner.email %></td>
              <td><%= link_to 'Results', poll %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Poll', new_poll_path %>
