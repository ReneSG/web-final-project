<p id="notice"><%= notice %></p>

<h1>Pending polls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Event date</th>
      <th>Address</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_polls.each do |poll| %>
      <tr>
        <td><%= poll.name %></td>
        <td><%= poll.event_date %></td>
        <td><%= poll.address %></td>
        <td><%= poll.owner.email %></td>
        <td><%= link_to 'Show', poll %></td>
        <td><%= link_to 'Edit', edit_poll_path(poll) %></td>
        <td><%= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

