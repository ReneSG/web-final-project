<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <p id="notice"><%= notice %></p>

      <h1>Pending polls</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Event date</th>
            <th>Address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pending_polls.each do |poll| %>
            <tr>
              <td><%= poll.name %></td>
              <td><%= poll.event_date %></td>
              <td><%= poll.address %></td>
              <td><%= link_to 'See details', poll_info_path(poll.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h1>Done polls</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Event date</th>
            <th>Address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @done_polls.each do |poll| %>
            <tr>
              <td><%= poll.name %></td>
              <td><%= poll.event_date %></td>
              <td><%= poll.address %></td>
              <td><%= link_to 'Results', poll %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>
